# AI Co-Scientist Environment Configuration

# === CORE LLM SERVICES ===
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# === LITERATURE SEARCH SERVICES ===
SERPER_API_KEY=your_serper_api_key_here
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here
ARXIV_API_KEY=optional_arxiv_api_key
PUBMED_API_KEY=your_pubmed_api_key_here

# === SCIENTIFIC DATABASES ===
CHEMBL_API_KEY=your_chembl_api_key_here
PUBCHEM_API_KEY=optional_pubchem_api_key
UNIPROT_API_KEY=optional_uniprot_api_key
ALPHAFOLD_API_KEY=your_alphafold_api_key_here
REACTOME_API_KEY=optional_reactome_api_key

# === DATABASE CONFIGURATION ===
# PostgreSQL for structured data
POSTGRES_URL=postgresql://coscientist:coscientist@localhost:5432/coscientist
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=coscientist
POSTGRES_USER=coscientist
POSTGRES_PASSWORD=coscientist

# Chroma for vector embeddings
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_PATH=/tmp/chroma_db
CHROMA_COLLECTION_NAME=coscientist_embeddings

# === REDIS & CELERY CONFIGURATION ===
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC

# === FEATURE TOGGLES ===
ENABLE_PERSISTENCE=false
ENABLE_EXTERNAL_TOOLS=false
ENABLE_LITERATURE_SEARCH=true
ENABLE_VECTOR_SEARCH=false
ENABLE_DISTRIBUTED_PROCESSING=false
AUTH_ENABLED=false
OTEL_ENABLED=false

# === PERFORMANCE CONFIGURATION ===
# Worker configuration
MAX_WORKERS_PER_AGENT=4
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_PREFETCH_MULTIPLIER=1

# Caching configuration
HYPOTHESIS_CACHE_TTL=3600
LITERATURE_CACHE_TTL=7200
EMBEDDING_CACHE_TTL=86400

# Tournament configuration
TOURNAMENT_MIN_COMPARISONS=10
TOURNAMENT_MAX_ROUNDS=5
EVOLUTION_MUTATION_RATE=0.2

# Literature search configuration
LITERATURE_SEARCH_DEPTH=3
LITERATURE_MAX_RESULTS=50
LITERATURE_RELEVANCE_THRESHOLD=0.6

# === RELIABILITY CONFIGURATION ===
# Retry configuration
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_SECONDS=2
RETRY_EXPONENTIAL_BASE=2

# Circuit breaker configuration
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60
CIRCUIT_BREAKER_HALF_OPEN_MAX_CALLS=3

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# === QUALITY THRESHOLDS ===
RESULT_CONFIDENCE_THRESHOLD=0.7
HYPOTHESIS_QUALITY_THRESHOLD=0.6
REVIEW_QUALITY_THRESHOLD=0.5
NOVELTY_THRESHOLD=0.8

# === LOGGING CONFIGURATION ===
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/coscientist.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# === DEVELOPMENT CONFIGURATION ===
DEBUG=false
DEVELOPMENT_MODE=false
MOCK_EXTERNAL_APIS=false
SKIP_AUTHENTICATION=true
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# === MONITORING CONFIGURATION ===
# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=coscientist
OTEL_RESOURCE_ATTRIBUTES=service.name=coscientist,service.version=1.0.0

# Prometheus metrics
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Health check configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# === SECURITY CONFIGURATION ===
# JWT configuration (if auth enabled)
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API security
API_KEY_HEADER=X-API-Key
RATE_LIMIT_ENABLED=true
CORS_ENABLED=true

# === EXTERNAL API ENDPOINTS ===
# Override default endpoints if needed
SERPER_API_URL=https://google.serper.dev/scholar
SEMANTIC_SCHOLAR_API_URL=https://api.semanticscholar.org/graph/v1
PERPLEXITY_API_URL=https://api.perplexity.ai
CHEMBL_API_URL=https://www.ebi.ac.uk/chembl/api/data
PUBCHEM_API_URL=https://pubchem.ncbi.nlm.nih.gov/rest
ALPHAFOLD_API_URL=https://alphafold.ebi.ac.uk/api
UNIPROT_API_URL=https://rest.uniprot.org

# === TIMEOUT CONFIGURATION ===
# API timeouts (in seconds)
EXTERNAL_API_TIMEOUT=30
LLM_API_TIMEOUT=120
DATABASE_TIMEOUT=10
REDIS_TIMEOUT=5

# Long-running operation timeouts
HYPOTHESIS_GENERATION_TIMEOUT=300
LITERATURE_SEARCH_TIMEOUT=60
TOURNAMENT_TIMEOUT=180
EVOLUTION_TIMEOUT=240 